@model IEnumerable<Final_Project.Models.Course>

@{
    ViewBag.Title = "AllCourses";
}

<h2>Courses</h2>

<p>
    @Html.ActionLink("Add New Course", "CreateCourse")
</p>
<table class="table table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CourseName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    <tr onclick="window.location = '@Url.Action("CourseDetails", "Course", new{ id = item.CourseId})'">
        <td>
            @Html.DisplayFor(modelItem => item.CourseName)
        </td>
        <td>
            @Html.ActionLink("Details", "CourseDetails", new { id = item.CourseId }) 
        </td>
    </tr>
}

</table>


 
