@model Final_Project.Models.Course


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Course</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-horizontal">

            <div class="form-group">
                <label class="control-label col-md-2 form-group">Course Name</label>
                <div class="col-md-10">
                    <input type="text" class="form-control" name="courseName" />
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2 form-group">Start Date</label>
                <div class="col-md-10">
                    <input type="date" class="form-control" name="startDate" />
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2 form-group">End Date</label>
                <div class="col-md-10">
                    <input type="date" class="form-control" name="endDate" />
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2 form-group">Price</label>
                <div class="col-md-10">
                    <input type="number" class="form-control" name="price" />
                </div>
            </div>                  
        </div>
        <div class="form-group control-label col-md-2">
            @{
    List<SelectListItem> teachers = new List<SelectListItem>();
    foreach (var t in ViewBag.teachers)
    {
        var teacher = new SelectListItem { Text = t.Person.LastName, Value = t.EmployeeId.ToString() };
        teachers.Add(teacher);
    }
            }
            @Html.DropDownList("teachers", @teachers, new { htmlAttributes = new { @class = "form-control", @name = "teacher" } });
        </div>



     

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
